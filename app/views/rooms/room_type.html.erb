<div class="body2">
  <div class="main">
    <section id="content">
      <div class="wrapper">
        <article class="">
          <div class="">
            <h2 class="pad_bot1 pad_top1">Rent a Living</h2>
            <% @all_room.each do |room|%>
              <div class="wrapper">
                <figure class="left marg_right1"><%= image_tag room.image.url %></figure>
                <div class="">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Room Type</th>
                        <th>Bed Type</th>
                        <th>Pool Facing</th>
                        <th>Gym</th>
                        <th>Breakfast</th>
                        <th>pick_n_Drop</th>
                        <th>Price/day</th>
                        <th>Room no</th>
                      </tr>
                    </thead>
                    <tbody> 
                      <tr class="success">
                        <td><%= room.room_type %></td>
                        <td><%= room.bed_type %></td>
                        <td><%= room.pool_facing %></td>
                        <td><%= room.gym %></td>
                        <td><%= room.breakfast %></td>
                        <td><%= room.pick_n_drop %></td>
                        <td><%= room.price %></td>
                        <td><%= room.room_floor %>-<%= room.room_no %></td>
                      </tr>
                    </tbody>
                  </table> 
                  <div class="container">
                    <% if current_user.present?%>
                      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal_<%= room.id%>">Booking Info</button>
                    <% end %>  
                    <div class="modal fade" id="myModal_<%= room.id%>" role="dialog">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Modal Header</h4>
                          </div>
                          <div class="modal-body">
                            <table class="table">
                                <thead>
                                  <tr>
                                    <th>Number of day</th>
                                    <th>per day price</th>
                                    <th>total price</th>
                                  </tr>
                                </thead>
                                <tbody> 
                                  <tr class="success">
                                    <td><%= @days%></td>
                                    <td><%= room.price%></td>
                                    <td><%= room.price * @days %></td>
                                  </tr>
                                </tbody>
                              </table>
                              <% total_price = room.price * @days %>
                              <a href="<%= booking_info_bookings_path(:room_id=> room.id,:total_price=> total_price,:start_date=>  @start_date , :end_date=>@end_date) %>"><button type="button" class="btn btn-success" >Book</button></a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
              </div></br></br> </br> </br>
            <% end %>  
          </div>  
        </article>
      </div>
    </section>
  </div>
</div> 


